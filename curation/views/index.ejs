<% include ./partials/boilerplate.ejs %>

<div>
  <h1><%= message %></h1>
  <h2><%= documentTitle %></h2>
  <h3><%= subTitle %></h3>
</div>
<% if (showMore === true) { %>
  <div class='more'>
    <p>Quotes App is a compilation of favorite quotes from the students of NYC-WDI. It's super cool and great.</p>
  </div>
<% } %>

<p>We have quotes by <% quoteAuthors.forEach(function(author, index) { %>
  <% if (index !== quoteAuthors.length - 1) { %>
    <%= author %>,
  <% } else { %>
    <%- author -%>
  <% } %>
<% }) -%>.</p>

<a href='/quotes'>See all quotes</a>

<% include ./partials/footer.ejs %>
