<% include ../partials/boilerplate.ejs %>

<div class="container bg-white rounded box-shadow">
  <div class="row border-bottom">
    <div class="col-sm-12">
      <h6>Edit Collection</h6>
      <h5><%= collection.name %></h5>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <form class="form-inline" id="artwork-search" method="post">
        <div class="form-group col-sm-9">
          <input type="text" class="form-control plaintext col-sm-12" name="keyword" id="artwork-keyword" placeholder="enter a new keyword to search for in an artwork">
        </div>
        <div class="form-group col-sm-3">
          <button type="submit" class="btn btn-success col-sm-12">Search</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container mt-4">
  <div class="row" id="search-results">
  </div>
  <% include ../search/artwork.ejs %>
</div>

<% include ../partials/footer.ejs %>
